<body>

<div class="container">
    <h1 id="main-title">Ada Kejutan Untukmu!</h1>
    <button class="btn" id="surprise-btn">Klik Aku!</button>
</div>

<div class="surprise-container" id="surprise-box">
    <h2 class="surprise-text">SELAMAT ULANG TAHUN!</h2>
    <p class="surprise-message">Semoga hari spesialmu penuh dengan kebahagiaan dan tawa!</p>
</div>

<script>
    const surpriseBtn = document.getElementById('surprise-btn');
    const surpriseBox = document.getElementById('surprise-box');
    const mainTitle = document.getElementById('main-title');
    const audio = new Audio('https://www.soundhelix.com/examples/mp3/SoundHelix-Song-1.mp3');

    surpriseBtn.addEventListener('click', () => {
        surpriseBox.style.display = 'flex';
        mainTitle.style.display = 'none';
        surpriseBtn.style.display = 'none';

        // Play audio
        audio.play();

        // Create confetti and balloons
        createConfetti(150);
        createBalloons(15);
        
        // Hide surprise box after a delay
        setTimeout(() => {
            surpriseBox.style.display = 'none';
            mainTitle.style.display = 'block';
            surpriseBtn.style.display = 'block';
            audio.pause();
            audio.currentTime = 0;
            // Remove confetti and balloons
            document.querySelectorAll('.confetti-piece, .balloon').forEach(el => el.remove());
        }, 10000); // 10 seconds
    });

    function createConfetti(count) {
        for (let i = 0; i < count; i++) {
            const piece = document.createElement('div');
            piece.classList.add('confetti-piece');
            piece.style.backgroundColor = `hsl(${Math.random() * 360}, 100%, 75%)`;
            piece.style.left = `${Math.random() * 100}vw`;
            piece.style.animationDelay = `${Math.random() * 2}s`;
            piece.style.animationDuration = `${2 + Math.random() * 2}s`;
            document.body.appendChild(piece);
        }
    }

    function createBalloons(count) {
        for (let i = 0; i < count; i++) {
            const balloon = document.createElement('div');
            balloon.classList.add('balloon');
            balloon.style.backgroundColor = `hsl(${Math.random() * 360}, 75%, 65%)`;
            balloon.style.left = `${Math.random() * 100}vw`;
            balloon.style.animationDelay = `${Math.random() * 5}s`;
            document.body.appendChild(balloon);
        }
    }
</script>

</body>
</html>
